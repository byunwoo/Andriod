<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="cjcityTheme" parent="@android:style/Theme.NoTitleBar">
		<item name="android:textSize">9pt</item>
		<item name="android:textColor">#DDCCCC</item>
	</style>
	<style name="buttonStyle" parent="@style/cjcityTheme">
			<item name="android:background">@drawable/btn_bg</item>
			<item name="android:textColor">#000000</item>  
	</style>
	<style name="mainButtonStyle" parent="@style/buttonStyle">
			<item name="android:layout_width">200dp</item>
			<item name="android:textSize">11.5pt</item>
	</style>
		<style name="titleBar" parent="@style/cjcityTheme">
			<item name="android:background">@drawable/title_bar</item>
			<item name="android:layout_width">fill_parent</item>
			<item name="android:textColor">#FFFFFF</item>
			<item name="android:textSize">11pt</item>
			<item name="android:textStyle">bold</item>
			<item name="android:layout_marginBottom">2dp</item>
	</style>
	<style name="receiptItem" parent="@style/cjcityTheme">
			<item name="android:textSize">6pt</item>
	</style>
</resources>
